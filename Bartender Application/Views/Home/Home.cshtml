@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width">
    <title>Wellcome to ClicktoDrink App</title>
    <meta name="keywords" content="drinks, cocktail, bar" />
    <link rel="stylesheet" href="~/css/Styles.css" />

    <style>
        body {
            word-spacing: 0.1em;
            background-color: #ffc;
            margin: 40px;
